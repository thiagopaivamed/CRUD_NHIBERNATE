@model IEnumerable<CRUD_NHIBERNATE.Models.Carro>

@{
    ViewData["Title"] = "Carros registrados";
}

<h1>Carros registrados</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-success btn-sm">Novo carro</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CarroId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Placa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CarroId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Placa)
                </td>
                <td>
                    <a asp-controller="Carros" asp-action="Update" asp-route-carroId="@item.CarroId" class="btn btn-outline-info btn-sm">Atualizar</a> &emsp;
                    <form asp-controller="Carros" asp-action="Delete" asp-route-carroId="@item.CarroId" onclick="confirm('Prosseguir com a exclusão do carro @item.Nome ?')">
                        <button type="submit" class="btn btn-outline-danger btn-sm">Excluir</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
